



<div class="container">
	<div class="panel col-md-6 col-md-offset-3">
    <div class="panel-header">
        <header class="section-title">
            <h1>Registration Form</h1>

        </header>
    </div>
    <div class="panel-body">

                <div class="register-form">
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                        <%= devise_error_messages! %>
                         <div class="form-group">
                            <label for="InputUserName">Username<sup>*</sup></label>
                            <%= f.text_field :username, autofocus: true, :class=> "form-control", :type=> "text", :required => true %></div>
                           
                        </div>
                        <div class="form-group">
                            <label for="InputUserName">Email Address<sup>*</sup></label>
                            <%= f.email_field :email, autofocus: true, :class=> "form-control", :type=> "text" %></div>
                           
                        </div>
                        <div class="form-group">
                            <label for="InputFirstName">First Name</label>
                            <%= f.text_field :first_name, autofocus: true, :class=> "form-control", :type=> "text" %>
                           
                        </div>
                        <div class="form-group">
                            <label for="InputLastName">Last Name</label>
                            <%= f.text_field :last_name, autofocus: true, :class=> "form-control", :type=> "text" %>
                            
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="InputPassword">Password<sup>*</sup></label>
                                    <%= f.password_field :password, autocomplete: "off", :type=> "password", :class=> "form-control" %>
                                   
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="InputConfirmPassword">Confirm Password<sup>*</sup></label>
                                    <%= f.password_field :password_confirmation, autocomplete: "off", :type=> "password", :class=> "form-control" %>
                                   
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                              
                                	<%= render "devise/shared/links" %>
                             
                            </div>
                            <div class="col-md-6">
                             	<%= f.submit "Sign up", :class=>"btn btn-primary pull-right" %>
                                
                            </div>
                        </div>
                  <% end %>

                </div>
            </div> <!-- col-md-6 -->
       </div>
    </div> <!-- container -->