<div class="container">
        <section id="login-form">
            <h1>Optimus <span>Labs</span></h1>
		    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		    <div class="form-group">
               
				 <div class="input-group login-input">
				    <span class="input-group-addon"><i class="icon-user"></i></span>
				  <%= f.email_field :email, autofocus: true, :label => "false", :type=> "text", :class=> "form-control" %></div>
				
		

			  <div class="input-group login-input">
			    <span class="input-group-addon"><i class="icon-lock"></i></span>
			    <%= f.password_field :password, autocomplete: "off", :label => "false", :type=> "password", :class=> "form-control" %></div>

				  <% if devise_mapping.rememberable? -%>
				    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
				  <% end %>

			  <div><%= f.submit "Sign in", :class=>"btn btn-primary pull-right" %></div>
			<% end %>
			<%= render "devise/shared/links" %>

        </section>
 </div>
