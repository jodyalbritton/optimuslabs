          $('#dashboard-support-tickets .panel-body').slimScroll({ height: 300, alwaysVisible: true, color: '#888',allowPageScroll: true });
        })
      </script>

       <script>
        init.push(function () {
          $('#client-invoices .panel-body > div').slimScroll({ height: 300, alwaysVisible: true, color: '#888',allowPageScroll: true });
        })
  </script>
  
  <script>
        init.push(function () {
          $('#dashboard-tasks .panel-body').slimScroll({ height: 300, alwaysVisible: true, color: '#888',allowPageScroll: true });
        })
  </script>
