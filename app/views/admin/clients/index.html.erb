  <% content_for :page_header do %>
    Listing Clients
  <% end %>
  <% content_for :page_actions do %>
    <%= link_to new_admin_client_path, :class => 'btn btn-primary btn-labeled', :style=>"width: 100%;" do %>
                <span class="btn-label icon fa fa-plus"></span>Create Client
    <% end %>
  <% end %>
  <% content_for :page_search do %>
  <form action="" class="pull-right col-xs-12 col-sm-6">
              <div class="input-group no-margin">
                <span class="input-group-addon" style="border:none;background: #fff;background: rgba(0,0,0,.05);"><i class="fa fa-search"></i></span>
                <input type="search" id="search" placeholder="Search..." class="form-control no-padding-hr" style="border:none;background: #fff;background: rgba(0,0,0,.05);">
              </div>
            </form>
  <% end %> 
<%= render 'admin/header' %>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover" id="table">
    <thead>
      <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
       
        
       
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @clients.each  do |client| %>
            <tr>
            <td>
            <%= link_to  ([:admin,client]) do  %>
            <%= client.name %>
            <% end %>
            </td>
            <td><%= mail_to client.email %></td>
            <td><%= client.phone %></td>
          
            
        
        <td>
            <%= link_to edit_admin_client_path(client) do %>
              <span class="btn btn-default icon fa fa-pencil"></span>
            <% end %>
            <%= link_to  admin_client_path(client), method: :delete, data: { confirm: 'Are you sure?' }, :class=> "hidden-sm hidden-xs" do %>
              <span class="btn btn-danger icon fa fa-trash-o"></span>
            <% end %>
       
        </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>
<script>
  $(function () {
    $( '#table' ).searchable({
        striped: true,
        oddRow: { 'background-color': '#f5f5f5' },
        evenRow: { 'background-color': '#fff' },
        searchType: 'fuzzy'
    });
    
    $( '#searchable-container' ).searchable({
        searchField: '#container-search',
        selector: '.row',
        childSelector: '.col-xs-12',
        show: function( elem ) {
            elem.slideDown(100);
        },
        hide: function( elem ) {
            elem.slideUp( 100 );
        }
    })
});
</script>