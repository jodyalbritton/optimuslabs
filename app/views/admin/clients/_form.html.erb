<%= form_for([:admin, @client], :html => { :class => "form-horizontal panel", :multipart => true }) do |f| %>
  <% if @client.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@client.errors.count, "error") %> prohibited this client from being saved:</h4>

      <ul>
      <% @client.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="panel-body">
      <div class="form-group">
        <%= f.label :name, :class => "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :name, :class => "form-control", :required => true %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :email, :class => "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.email_field :email, :class => "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :url, :class => "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.url_field :url, :class => "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :phone, :class => "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.telephone_field :phone, :class => "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :address, :class => "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :address, :class => "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :city, :class => "col-sm-2 control-label" %>
        <div class="col-sm-2">
          <%= f.text_field :city, :class => "form-control" %>
        </div>
         <%= f.label :state, :class => "col-sm-2 control-label" %>
        <div class="col-sm-2">
          <%= f.text_field :state, :class => "form-control" %>
        </div>
         <%= f.label :zip, :class => "col-sm-2 control-label" %>
        <div class="col-sm-2">
          <%= f.text_field :zip, :class => "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :description, :class => "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_area :description, :class => "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :avatar, :class => "col-sm-2 control-label" %>
        <div class="col-sm-4">
          <%= f.file_field :avatar, :class => "form-control" %>
        </div>
        <%= f.label :featured, :class => "col-sm-1 control-label" %>
        <div class="col-sm-2">
          <%= f.check_box :featured, :class => "form-control switched" %>
        </div>
         <%= f.label :active, :class => "col-sm-1 control-label" %>
        <div class="col-sm-2">
          <%= f.check_box :active, :class => "form-control switched" %>
        </div>
      </div>
    </div>
    <div class="panel-footer text-right">
             <%= f.submit :class => "btn btn-primary" %>
    </div>
<% end %>

<script>
  $(function() {
       $('.switched').switcher();
       $('#client_avatar').pixelFileInput({ placeholder: 'No file selected...' });
  });
</script>