 

<div class="panel" id="client-invoices">
          <div class="panel-heading">
            <span class="panel-title">Client Invoices</span>
          </div>
          <div class="panel-body">
            <div>
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Subject</th>
                  <th>Balance</th>
                </tr>
              </thead>
              <tbody>
              <% @client.invoices.each do |invoice|%>
                <tr>
                  <td><%= link_to invoice.subject, admin_invoice_path(invoice) %></td>
                  <td><%= invoice.balance %></td>
                </tr>
              <% end %>
              </tbody>
            </table>
            </div>
          </div>
        </div>
