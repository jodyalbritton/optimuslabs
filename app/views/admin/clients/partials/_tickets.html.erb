<!-- 10. $SUPPORT_TICKETS ==========================================================================

      Support tickets
-->
     

      <div class="col-md-12 col-sm-12">
        <div class="panel panel-success widget-support-tickets" id="dashboard-support-tickets">
          <div class="panel-heading">
            <span class="panel-title"><i class="panel-title-icon fa fa-bullhorn"></i>Tickets</span>
             <div class="panel-heading-controls">
              <%= link_to new_admin_client_ticket_path(@client, @ticket)  do%>
              <button class="btn btn-xs btn-primary btn-outline"><i class="fa fa-pencil text-success"></i> New Ticket</button>
              <% end %>
              <button class="btn btn-xs btn-primary btn-outline"><i class="fa fa-eraser text-success"></i> <%= @client.tickets.size %></button>
            </div>
          </div> <!-- / .panel-heading -->
          <div class="panel-body tab-content-padding">
            <!-- Panel padding, without vertical padding -->
            <div class="panel-padding no-padding-vr">
            <% @client.tickets.each do |ticket| %>
              <div class="ticket">
                <span class="label label-success ticket-label"><%= ticket.status %></span>
                <%= link_to ([:admin, ticket]), :class=> "ticket-title" do %> <%= ticket.subject %><span>#<%= ticket.id %></span><% end %>
                <span class="ticket-info">
                  Opened by <a href="#" title=""><%= ticket.client.name %></a> today
                </span>
              </div> <!-- / .ticket -->

            <% end %>
            </div>
          </div> <!-- / .panel-body -->
        </div> <!-- / .panel -->
      </div>
<!-- /10. $SUPPORT_TICKETS -->