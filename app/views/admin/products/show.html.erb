  <% content_for :page_header do %>
   <%=@product.name %>
  <% end %>
  <% content_for :page_actions do %>
   <%= link_to admin_products_path, :class => 'btn btn-primary btn-labeled', :style=>"width: 100%;" do %>
                <span class="btn-label icon fa fa-chevron-left"></span>Back
    <% end %>
  <% end %>
<%= render 'admin/header' %>


<div class="panel colourable">
          <div class="panel-heading">
            <span class="panel-title">Product Details</span>
            <div class="panel-heading-controls">
              <span class="panel-heading-text"><em><%= link_to "Public View", product_path %></em>&nbsp;&nbsp;<span style="color: #ccc">|</span>&nbsp;&nbsp;</span>
               <%= link_to edit_admin_product_path(@product), :class => 'btn btn-xs' do %>
                <span class="btn-label icon fa fa-plus"></span>Edit
               <% end %>
            </div>
          </div> <!-- / .panel-heading -->
          <div class="panel-body">
            <div class="row">
              <div class="col-md-8">
        
            
                  <%= sanitize(@product.description) %>
              </div>
              
              <div class="col-md-4">
            
                <%= image_tag @product.photo(:medium) %>
              </div>
            </div>
          </div>
</div>
<div class="panel colourable">
          <div class="panel-heading">
            <span class="panel-title">Attachments</span>
            <div class="panel-heading-controls">
              <span class="panel-heading-text"><em></em>&nbsp;&nbsp;<span style="color: #ccc">|</span>&nbsp;&nbsp;</span>
               <%= link_to new_admin_product_attachment_path(@product), :class => 'btn btn-xs' do %>
                <span class="btn-label icon fa fa-plus"></span>Add Attachment
               <% end %>
            </div>
          </div> <!-- / .panel-heading -->
          <div class="panel-body">
            <div class="row">
            
             
          
            </div>
            <div class="row">
            <% @product.attachments.each do |attachment| %>
                <div class="col-xs-3">
                    <a href="#" class="thumbnail">
                     <%= image_tag attachment.file.url(:medium), :class=> "img-responsive" %>
                         
                    </a>
                </div>
            <% end %>
              </div>
          </div>
</div>