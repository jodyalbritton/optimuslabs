<%= form_for([:admin, @product]) do |f| %>
  

  <div class="landscape-crop-area">
    <% # Crop area. Mantains original image proportions. Crop area takes the aspect ratio  %>
    <%= f.cropbox :photo, :width => 600 %>
  </div>
  <div class="clear"></div>

  <div class="actions">
    <%= f.submit 'Crop image' %>
  </div>
<% end %>