



<%= form_for [:admin, @product], :html => { :class => "form-horizontal" } do |f| %>
  <% if @product.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h4>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-8">
      
      <div class="form-group">
        <%= f.label :header_photo, :class => "control-label col-md-2" %>
        <div class="col-md-6">
          <%= f.file_field :header_photo, :class=>"form-control" %>
        </div>
      </div>
      <div class="col-md-offset-2">
        <%= image_tag @product.header_photo.url(:large), :class=> "img-responsive" %>
      </div>
      <div class="form-group">
        <%= f.label :description, :class => "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_area :description, :class => "form-control" %>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :name, :class => "control-label" %>
        <div>
          <%= f.text_field :name, :class => "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :summary, :class => "control-label" %>
        <div>
          <%= f.text_area :summary, :class=> "control-form" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :category, :class => "control-label" %>
        <div>
          <%= f.collection_select :category_id, Category.all, :id, :name, {prompt: "Select a category"}, {class: "form-control"} %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :cost, :class => "control-label" %>
        <div>
          <%= f.number_field :cost%>
        </div>
      </div>
      <div class="form-group">
         <%= f.label :price, :class => "control-label" %>
        <div>
          <%= f.number_field :price%>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :photo, :class => "control-label" %>
        <div>
          <%= f.file_field :photo, :class=>"form-control" %>
        </div>
      </div>
      <div class="center-block">
         <%= image_tag @product.photo.url(:medium), :class=> "img-responsive" %>
        </div>
      
    </div>
  

  
  
  
  
   <script>
          init.push(function () {
            var options = {
              todayBtn: "linked",
              format: "yyyy-mm-dd",
              orientation: $('body').hasClass('right-to-left') ? "auto right" : 'auto auto'
            }
            $('#bs-datepicker-example').datepicker(options);

            $('#bs-datepicker-component').datepicker(options);

            var options2 = {
              orientation: $('body').hasClass('right-to-left') ? "auto right" : 'auto auto'
            }
            $('#bs-datepicker-range').datepicker(options2);

            $('#bs-datepicker-inline').datepicker();
          });
        </script>


 
 
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
 
<% end %>


     <script>
      $(function(){
          $('#product_description').editable({inlineMode: false, height: 600})
      });
  </script>
