  <% content_for :page_header do %>
   <%= @invoice.subject %>
  <% end %>
  <% content_for :page_actions do %>
    <% if params[:client_id] %>
      <%= link_to admin_client_invoices_path(params[:client_id]), :class => 'btn btn-primary btn-labeled', :style=>"width: 100%;" do %>
                  <span class="btn-label icon fa fa-plus"></span>Back
      <% end %>
    <% else %>
       <%= link_to admin_invoices_path, :class => 'btn btn-primary btn-labeled', :style=>"width: 100%;" do %>
                  <span class="btn-label icon fa fa-plus"></span>Back
      <% end %>
  <% end %>
  <% end %>

  <%= render "admin/header" %>

<script>
  var init = [];
  init.push(function () {
    $('body').addClass('page-invoice');
  });
</script>
<div class="panel invoice" id="printDiv">
<div class="panel-heading hidden-print">
            <span class="panel-title">Customer Invoice</span>
            <% if params[:client_id] %>
              <div class="panel-heading-controls">
                <span class="panel-heading-text"><em><%= link_to "Print", admin_client_invoice_print_path(params[:client_id],@invoice) %></em>&nbsp;&nbsp;<span style="color: #ccc">|</span>&nbsp;&nbsp;</span>
                 <%= link_to edit_admin_client_invoice_path(params[:client_id],@invoice), :class => 'btn btn-xs' do %>
                  <span class="btn-label icon fa fa-plus"></span>Edit
                 <% end %>
              </div>
            <% else %>
              <div class="panel-heading-controls">
                <span class="panel-heading-text"><em><%= link_to "Print", admin_invoice_print_path(@invoice) %></em>&nbsp;&nbsp;<span style="color: #ccc">|</span>&nbsp;&nbsp;</span>
                 <%= link_to edit_admin_invoice_path(@invoice), :class => 'btn btn-xs' do %>
                  <span class="btn-label icon fa fa-plus"></span>Edit
                 <% end %>
              </div>
            <% end %>
</div> <!-- / .panel-heading -->
      <div class="invoice-header">
        <h3>
        
          <div>
                <small><%= Setting.company_name %></small><br>
                <% if @invoice.quoted? %>
                   Quote #<%= @invoice.id %>
                <% else %>
                   Invoice #<%= @invoice.id %>
                <% end %>

               
          </div>
        </h3>
        <address>
          <%= Setting.company_address %><br>
           <%= Setting.company_city %>, <%= Setting.company_state %>, <%= Setting.company_zip %><br>
         
        </address>
        <div class="invoice-date">
          <small><strong>Date</strong></small><br>
         <%= @invoice.created_at.strftime('%B %d, %Y') %>
        </div>
      </div> <!-- / .invoice-header -->
      <div class="invoice-info">
        <div class="invoice-recipient">
          <strong><%= @invoice.client.name %></strong><br>
           <%= @invoice.client.address %><br>
           <%= @invoice.client.city %>, <%=@invoice.client.state %>, <%= @invoice.client.zip %>
        </div> <!-- / .invoice-recipient -->
        <div class="invoice-total">
          <span><%= @invoice.total_price %> </span>
          TOTAL:
        </div> <!-- / .invoice-total -->
        <div class="invoice-due">
          <span><%= @invoice.current_balance %> </span>
          DUE:
        </div> <!-- / .invoice-total -->
      </div> <!-- / .invoice-info -->
      <hr>
      <div class="invoice-table">
        <table>
          <thead>
            <tr>
              <th>
                Item Name
              </th>
              <th>
                Billed
              </th>
              <th>
                Item Type
              </th>
              <th>
                Quantity
              </th>
              <th>
                Line total
              </th>
            </tr>
          </thead>
          <tbody>
          <% @invoice.items.each do |item| %>
            <tr>
              <td>
               <%= item.purchasable.name %>
                <div class="invoice-description"><%= item.description %></div>
              </td>
              <td>
                <%= item.purchasable.rate_type.name %>
              </td>
              <td>
                <%= item.purchasable.class.to_s %>
              </td>
              <td>
                <%= item.quantity %>
              </td>
              <td>
                <%= item.line_total %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
       
          <div>
            <strong>Notes:</strong>
            <% @invoice.notes.each do |note| %>
              <div class="row">
                <div class="col-md-1">

                 <%= note.created_at.strftime("%d/%m/%Y") %>
                </div>
                <div class="col-md-9">
                <%= note.body %>
                </div>
              </div>
            <% end %>
          </div>
      </div> <!-- / .invoice-table -->
    </div> <!-- / .invoice -->
