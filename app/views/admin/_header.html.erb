		<ul class="breadcrumb breadcrumb-page hidden-sm hidden-xs">
		<%= render_breadcrumbs :tag => :li, :separator => "", :class=>"breadcrumb-label text-light-gray" %>
		</ul>
		<div class="page-header hidden-sm hidden-xs">
			
			<div class="row">
				<!-- Page header, center on small screens -->
				<h1 class="col-xs-12 col-sm-4 text-center text-left-sm"><i class="fa fa-pencil page-header-icon"></i>&nbsp;&nbsp;
				<%= yield :page_header %>
				</h1>

				<div class="col-xs-12 col-sm-8">
					<div class="row">
						<hr class="visible-xs no-grid-gutter-h">
						<!-- "Create project" button, width=auto on desktops -->

						<div class="pull-right col-xs-12 col-sm-auto">
						<%= yield :page_actions %>
						</div>

						<!-- Margin -->
						<div class="visible-xs clearfix form-group-margin"></div>

						<!-- Search field -->
						<%= yield :page_search %>
					</div>
				</div>
			</div>
		</div> <!-- / .page-header -->
		<!-- / .notifications bar -->
		<div class="notifications-bar">
		 <% flash.each do |name, msg| %>
		      <%= content_tag :div, :class => "alert alert-#{ name == :error ? "danger" : "success" } alert-dismissable" do %>
		        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		        <%= msg %>
		      <% end %>
		 <% end %>
		</div><!-- / .notifications bar -->