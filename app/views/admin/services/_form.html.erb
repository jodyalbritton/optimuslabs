



<%= form_for [:admin, @service], :html => { :class => "form-horizontal panel" } do |f| %>
  <div class="panel-body">
  <% if @service.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@service.errors.count, "error") %> prohibited this service from being saved:</h4>

      <ul>
      <% @service.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <div class="row">
      <div class="col-md-8">
        <div class="form-group no-margin-hr">
          <%= f.label :header, :class => "control-label" %>
          <%= f.file_field :header, :class=>"form-control" %>
        </div>
       <div class="form-group no-margin-hr">
        <%= f.label :description, :class => "control-label" %>
        <%= f.text_area :description, :class => "form-control" %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group no-margin-hr">
        <%= f.label :name, :class => "control-label" %>  
        <%= f.text_field :name, :class => "form-control", :required => true %>    
      </div>
       <div class="form-group no-margin-hr">
        <%= f.label :summary, :class => "control-label" %>
        <%= f.text_area :summary, :class => "form-control " %>
      </div>

      <div class="form-group no-margin-hr">
        <%= f.label :category, :class => "control-label" %>
      <div>
        <%= f.text_field :category_name, data: {autocomplete_source: admin_categories_path}, :class=> "form-control", :required => true %>
      </div>
      </div>
       <div class="form-group no-margin-hr">
        <%= f.label :cost, :class => "control-label" %>
        <div>
         <%= f.text_field :cost, :class => "form-control", data:  {autonumeric: {aSign: '$'}} %>
        </div>
      </div>
       <div class="form-group no-margin-hr">
         <%= f.label :price, :class => "control-label" %>
        <div>
          <%= f.text_field :price, :class => "form-control", data:  {autonumeric: {aSign: '$'}} %>
        </div>
      </div>
      <div class="form-group no-margin-hr">
        <%= f.label :featured, :class => "control-label" %>
        <%= f.check_box :featured, :class=> "form-control" %>
      </div>
      <div class="form-group no-margin-hr">
        <%= f.label :listed, :class => "control-label" %>
        <%= f.check_box :listed, :class=> "form-control" %>
      </div>
      <div class="form-group no-margin-hr">
        <%= f.label :position, :class => "control-label" %>   
        <%= f.number_field :position, :class=> "form-control" %>
      </div>
      <div class="form-group no-margin-hr">
        <%= f.label :logo, :class => "control-label" %>
        <%= f.file_field :logo, :class=>"form-control" %>
      </div>
      </div>
    </div>
  

 
 
 
  </div>
  <div class="panel-footer text-right">    
      <%= f.submit :class => "btn btn-primary" %>
  </div> 
<% end %>


  <!-- Modal -->
        <div id="myModal" class="modal fade" tabindex="-1" role="dialog" style="display: none;">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                <h4 class="modal-title" id="myModalLabel">Modal Heading</h4>
              </div>
              <div class="modal-body">
                <%= render 'icons' %>
              </div> <!-- / .modal-body -->
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
              </div>
            </div> <!-- / .modal-content -->
          </div> <!-- / .modal-dialog -->
        </div> <!-- /.modal -->
        <!-- / Modal -->
<!-- /5. $DEFAULT_MODAL -->

<script>
          $(function() {
           $( "#service_category_name" ).autocomplete({
          source: $('#service_category_name').data('autocomplete-source')
            });
          });
          init.push(function () {
            var options = {
              todayBtn: "linked",
              format: "yyyy-mm-dd",
              orientation: $('body').hasClass('right-to-left') ? "auto right" : 'auto auto'
            }
            $('#bs-datepicker-example').datepicker(options);

            $('#bs-datepicker-component').datepicker(options);

            var options2 = {
              orientation: $('body').hasClass('right-to-left') ? "auto right" : 'auto auto'
            }
            $('#bs-datepicker-range').datepicker(options2);

            $('#bs-datepicker-inline').datepicker();
          });
</script>


<script>


$( ".addIcon" ).click(function() {
  var arrayOfClasses = (this).className.split(' ');
  $('#service_logo_icon').val(arrayOfClasses[2].substring(3));
  $('#myModal').modal('hide');
});
</script>


