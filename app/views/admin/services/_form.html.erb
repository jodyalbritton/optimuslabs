



<%= form_for [:admin, @service], :html => { :class => "form-horizontal" } do |f| %>
  <% if @service.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@service.errors.count, "error") %> prohibited this service from being saved:</h4>

      <ul>
      <% @service.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <%= f.label :name, :class => "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :name, :class => "form-control", :required => true %>
    </div>
  </div>
   <div class="form-group">
    <%= f.label :summary, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.text_area :summary, :class => "form-control " %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :logo, :class => "col-sm-2 control-label" %>
    <div class="col-sm-2">
      <%= f.file_field :logo, :class=>"form-control" %>
    </div>
     <%= f.label :logo_icon, :class => "col-sm-1 control-label" %>
    <div class="col-sm-2">
      <div class="input-group">
      <%= f.text_field :logo_icon, :class=>"form-control" %>
      <span class="input-group-addon" >
        
           <i class="fa fa-calendar" data-toggle="modal" data-target="#myModal"></i>
  
      </span>
       
      </div>
    </div>
     <%= f.label :header, :class => "col-sm-1 control-label" %>
    <div class="col-sm-2">
      <%= f.file_field :header, :class=>"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      
      <%= f.text_area :description, :class => "form-control" %>
      

    </div>
  </div>

  <div class="form-group">
    <%= f.label :category, :class => "col-sm-2 control-label" %>
    <div class="col-sm-2">
      <%= f.collection_select :category_id, Category.all, :id, :name, {class: "form-control"}%>
    </div>
     <%= f.label :cost, :class => "col-sm-1 control-label" %>
    <div class="col-sm-2">
      <%= f.number_field :cost%>
    </div>
     <%= f.label :price, :class => "col-sm-1 control-label" %>
    <div class="col-sm-2">
      <%= f.number_field :price%>
    </div>
  </div>
   <div class="form-group">
    <%= f.label :rate, :class => "col-sm-2 control-label" %>
    <div class="col-sm-2">
      <%= f.collection_select :rate_type_id, RateType.all, :id, :name %>
    </div>
    <%= f.label :featured, :class => "col-sm-1 control-label" %>
    <div class="col-sm-2">
      <%= f.check_box :featured, :class=> "form-control" %>
    </div>
      <%= f.label :sort_value, :class => "col-sm-1 control-label" %>
    <div class="col-sm-1">
      <%= f.number_field :sort_value, :class=> "form-control" %>
    </div>
  </div>
   <script>
          init.push(function () {
            var options = {
              todayBtn: "linked",
              format: "yyyy-mm-dd",
              orientation: $('body').hasClass('right-to-left') ? "auto right" : 'auto auto'
            }
            $('#bs-datepicker-example').datepicker(options);

            $('#bs-datepicker-component').datepicker(options);

            var options2 = {
              orientation: $('body').hasClass('right-to-left') ? "auto right" : 'auto auto'
            }
            $('#bs-datepicker-range').datepicker(options2);

            $('#bs-datepicker-inline').datepicker();
          });
        </script>


 
 
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
 
<% end %>


  <!-- Modal -->
        <div id="myModal" class="modal fade" tabindex="-1" role="dialog" style="display: none;">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                <h4 class="modal-title" id="myModalLabel">Modal Heading</h4>
              </div>
              <div class="modal-body">
                <%= render 'icons' %>
              </div> <!-- / .modal-body -->
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
              </div>
            </div> <!-- / .modal-content -->
          </div> <!-- / .modal-dialog -->
        </div> <!-- /.modal -->
        <!-- / Modal -->
<!-- /5. $DEFAULT_MODAL -->



<script>


$( ".addIcon" ).click(function() {
  var arrayOfClasses = (this).className.split(' ');
  $('#service_logo_icon').val(arrayOfClasses[2].substring(3));
  $('#myModal').modal('hide');
});
</script>


