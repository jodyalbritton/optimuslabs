<!-- 10. $FORM_EXAMPLE =============================================================================

				Form example
-->
				<%= simple_form_for [:admin, @ticket], :html => { :class => "form-horizontal" } do |f| %>
					<% @status = ["Open", "Closed", "Pending", "In Progess"]%>
					<div class="panel-heading">
						<span class="panel-title">New Ticket</span>
					</div>
					<div class="panel-body">
						<div class="form-group">
							<label for="asdasdas" class="col-sm-2 control-label">Client</label>
							<div class="col-sm-10">
								<%= f.association :client, :input_html=>{:class=> "form-control"}, :label=> false, :required => true %>
							</div>
						</div> <!-- / .form-group -->
						<div class="form-group">
							<label for="asdasdas" class="col-sm-2 control-label">Subject</label>
							<div class="col-sm-10">
								<%= f.text_field :subject, :class=> "form-control" %>
							</div>
						</div> <!-- / .form-group -->
						<div class="form-group">
							<label for="asdasdas" class="col-sm-2 control-label">Description</label>
							<div class="col-sm-10">
								<%= f.text_area :description, :class=> "form-control" %>
							</div>
						</div> <!-- / .form-group -->
						<div class="form-group">
							<label for="asdasdas" class="col-sm-2 control-label">Status</label>
							<div class="col-sm-10">
								 <%= f.input :status, collection: @status.map, :selected => @ticket.status, :input_html=>{:class=> "form-control"}, :label=> false %>
							</div>
						</div> <!-- / .form-group -->
						<div class="form-group" style="margin-bottom: 0;">
							<div class="col-sm-offset-2 col-sm-10">
								<%= f.submit "Update", :class=> "btn btn-primary" %>
							</div>
						</div> <!-- / .form-group -->
					</div>
				<% end %>
<!-- /10. $FORM_EXAMPLE -->
