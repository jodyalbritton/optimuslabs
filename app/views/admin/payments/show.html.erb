
  <% content_for :page_header do %>
   Payment #<%= @payment.id %>
  <% end %>
  <% content_for :page_actions do %>
    <%= link_to admin_payments_path, :class => 'btn btn-primary btn-labeled', :style=>"width: 100%;" do %>
                <span class="btn-label icon fa fa-plus"></span>Back
    <% end %>
  <% end %>

<%= render 'admin/header' %>



<div class="panel colourable">
          <div class="panel-heading">
            <span class="panel-title">Payment Details</span>
            <div class="panel-heading-controls">
              <span class="panel-heading-text"><em></em>&nbsp;&nbsp;<span style="color: #ccc">|</span>&nbsp;&nbsp;</span>
               <%= link_to edit_admin_payment_path(@payment), :class => 'btn btn-xs' do %>
                <span class="btn-label icon fa fa-plus"></span>Edit
               <% end %>
            </div>
          </div> <!-- / .panel-heading -->
          <div class="panel-body">
            <dl class="dl-horizontal">
              <dt>ID:</dt>
              <dd><%= @payment.id %></dd>
               <dt>Payment Date:</dt>
              <dd><%= @payment.created_at %></dd>

              <dt>Amount:</dt>
              <dd><%= @payment.amount %></dd>

            </dl>
          </div>
</div>