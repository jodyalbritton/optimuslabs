
  <% content_for :page_header do %>
    Listing Videos
  <% end %>
  <% content_for :page_actions do %>
    <%= link_to new_admin_video_path, :class => 'btn btn-primary btn-labeled', :style=>"width: 100%;" do %>
                <span class="btn-label icon fa fa-plus"></span>Create Video
    <% end %>
  <% end %>
  <% content_for :page_search do %>
  <form action="" class="pull-right col-xs-12 col-sm-6">
              <div class="input-group no-margin">
                <span class="input-group-addon" style="border:none;background: #fff;background: rgba(0,0,0,.05);"><i class="fa fa-search"></i></span>
                <input type="search" id="search" placeholder="Search..." class="form-control no-padding-hr" style="border:none;background: #fff;background: rgba(0,0,0,.05);">
              </div>
            </form>
  <% end %> 
<%= render 'admin/header' %>
<div class="table-responsive">
  <table id="table" class="table table-striped table-bordered table-hover">
    <thead>
      <tr>  
            <th class="no-sort"></th>
            <th>Name</th>
        
            
        
        <th class="no-sort"></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @videos) do |video| %>
            <td class="col-md-2">
       

              <div class="thumbnail">
                <%= link_to admin_video_path(video) do %>
                  <%= image_tag "https://img.youtube.com/vi/#{video.uid}/mqdefault.jpg", alt: video.title,
                              class: 'img-rounded img-responsive'%>
                <% end %>
              </div>
           
            </td>
            <td><%= video.title %></td>
         
        <td class="col-md-1">
          <%= link_to edit_admin_video_path(video) do %>
              <span class="btn btn-default icon fa fa-pencil"></span>
            <% end %>
            <%= link_to  admin_video_path(video), method: :delete, data: { confirm: 'Are you sure?' }, :class=> "hidden-sm hidden-xs" do %>
              <span class="btn btn-danger icon fa fa-trash-o"></span>
            <% end %>
        </td>
      <% end %>
    </tbody>
  </table>
</div>

<script>
 oTable = $('#table').dataTable({
  "sPaginationType": "bootstrap",
   "dom": 'T<"clear">lfrtip',
   "sDom": '<"H"lr>t<"F"ip>',
   "order": [[ 1, "asc" ]],
   "aoColumnDefs" : [ {
            'bSortable' : false,
            'aTargets' : ["no-sort"]
        } ]
        
});

  $("#search").keyup(function() {
   oTable.fnFilter(this.value);
  });
</script>

