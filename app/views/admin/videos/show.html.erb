 <% content_for :page_header do %>
   <%= @video.title %>
  <% end %>
  <% content_for :page_actions do %>
    <%= link_to admin_videos_path, :class => 'btn btn-primary btn-labeled', :style=>"width: 100%;" do %>
                <span class="btn-label icon fa fa-plus"></span>Back
    <% end %>
  <% end %>
<%= render 'admin/header' %>


<div class="panel colourable">
          <div class="panel-heading">
            <span class="panel-title">Video Details</span>
            <div class="panel-heading-controls">
              <span class="panel-heading-text"><em><%= link_to "Public View", video_path %></em>&nbsp;&nbsp;<span style="color: #ccc">|</span>&nbsp;&nbsp;</span>
               <%= link_to edit_admin_video_path(@video), :class => 'btn btn-xs' do %>
                <span class="btn-label icon fa fa-plus"></span>Edit
               <% end %>
            </div>
          </div> <!-- / .panel-heading -->
          <div class="panel-body">
            <div class="row">
              <div class="col-md-8">
                <div>
                  <h3> Video </h3>
                  <%= raw(@video.get_details.embed_html5)  %>
                </div>
              <div>
                  <h3> Description </h3>
                   <p><%= @video.description %></p>
              </div>
              </div>
              <div class="col-md-4">
                <div class="panel colourable">
                  <div class="panel-heading">
                    <span class="panel-title">Stats</span>
                  </div>
                  <div class="panel-body">
                    <ul class="list-group">
                    <li class="list-group-item">
                      <span class="badge badge-primary"><%= @video.views %></span>
                      Views
                    </li>
                    <li class="list-group-item">
                      <span class="badge badge-primary"><%= @video.likes %></span>
                      Likes
                    </li>
                    <li class="list-group-item">
                      <span class="badge"><%= @video.duration %></span>
                      Duration
                    </li>
                    <li class="list-group-item">
                      <span class="badge badge-primary"><%= @video.category.name %></span>
                      Category
                    </li>
                  </ul>
                  </div>
                </div>
              </div>
            </div>
          </div>
 

