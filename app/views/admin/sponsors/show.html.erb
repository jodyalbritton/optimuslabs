<% content_for :page_header do %>
   <%=@sponsor.name %>
  <% end %>
  <% content_for :page_actions do %>
   <%= link_to admin_sponsors_path, :class => 'btn btn-primary btn-labeled', :style=>"width: 100%;" do %>
                <span class="btn-label icon fa fa-chevron-left"></span>Back
    <% end %>
   
  <% end %>
<%= render 'admin/header' %>


<div class="panel colourable">
          <div class="panel-heading">
            <span class="panel-title">Sponsor Details</span>
            <div class="panel-heading-controls">
              <span class="panel-heading-text"><em><%= link_to "Public View", sponsor_path %></em>&nbsp;&nbsp;<span style="color: #ccc">|</span>&nbsp;&nbsp;</span>
               <%= link_to edit_admin_sponsor_path(@sponsor), :class => 'btn btn-xs' do %>
                <span class="btn-label icon fa fa-plus"></span>Edit
               <% end %>
            </div>
          </div> <!-- / .panel-heading -->
          <div class="panel-body">
            <div class="row">
              <div class="col-md-8">
                <div class="sponsor-details">
                  <%= @sponsor.description %>
                </div>
              </div>
              <div class="col-md-4">
                <div>
                  <%= image_tag @sponsor.avatar.url(:medium) %>
                </div>
              </div>
            </div>
          </div>
</div>