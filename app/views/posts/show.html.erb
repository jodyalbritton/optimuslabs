
<div class="container">
  <article>
   <section class="section-title">
              <h1><%= @post.title %></h1>

              <ol class="breadcrumb">
                  <%= render_breadcrumbs :tag => :li, :separator => "", :class=>"breadcrumb-label text-light-gray" %>
              </ol>
    </section>
  
      <div class="col-md-8">
        <section class="single">

                        

                        <div class="single-info">
                            <span class="date"><i class="icon-time"></i>&nbsp <%= @post.published_at.strftime("%A, %d-%B,%y") %></span> | 
                            <span class="author"><i class="icon-user"></i> <%= @post.author.full_name %></span>
                            <span class="num-comments pull-right"><i class="icon-comments"></i>&nbsp<%= raw("<a href='#{post_url(@post)}#disqus_thread'>Comments</a>") %></span>
                        </div>
                        <div class="article-content">
                         <%= sanitize @post.body %>
                        </div>
                        
                        
        </section> <!-- single -->
        <section class="comments">
          
              
            <h2 class="section-title">Comments</h2>
            
               <div id="disqus_thread"></div>
              <a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>
              Hello World!
        </section> <!-- comments -->
      </div>
      <div class="col-md-4">
        <%= render "posts/sidebar" %>
      </div>
  </article>  
</div>




