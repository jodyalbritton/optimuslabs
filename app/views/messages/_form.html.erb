  <div class="container">              


                <%= form_for (@message) do |f| %>
                    <% unless user_signed_in? %>
                        <div class="form-group">
                            <label for="InputName" class="col-sm-2">Name</label>
                             <%= f.text_field :full_name, :class=> "form-control" %> 
                        </div>
                 
                        <div class="form-group">
                            <label for="InputEmail1" class="col-sm-2">Email address</label>
                             <%= f.text_field :email, :class=> "form-control" %> 
                            <label for="InputEmail1" class="col-sm-2">Phone Number</label>
                             <%= f.text_field :phone, :class=> "form-control " %> 
                             <%= f.hidden_field :source, :value => "CONTACT_FORM" %>
                        </div>
                    <% else %>


                 
                       <div class="form-group">
                          <label for="InputMessage">Subject</label>
                          <%= f.text_field :subject, :class=> "form-control" %> 
                          <%= f.hidden_field :source, :value => "CONTACT_FORM_USER" %>  
                          <%= f.hidden_field :email, :value => current_user.email %>
                          <%= f.hidden_field :full_name, :value => current_user.full_name %>      
                      </div>
                      
                  <% end %>
                  <div class="form-group">
                          <label for="InputMessage">Mesagge</label>
                          <%= f.text_area :body, :class=> "form-control" %>       
                      </div>
                      <button type="submit" class="btn btn-primary">Submit</button>
              <% end %>
</div>