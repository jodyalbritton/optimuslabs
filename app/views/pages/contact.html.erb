<div class="container">
        <header class="section-title">
            <h1>Contact us</h1>

            <ol class="breadcrumb">
             <%= render_breadcrumbs :tag => :li, :separator => "", :class=>"breadcrumb-label text-light-gray" %>
            </ol>
        </header>

     

        <div class="row">
            <div class="col-md-7">
                <h2>Send Message</h2>

                <p>Got a question or a comment? Send us a message.</p>
                
                  <div class="container">              


                <%= form_for (new_contact_message) do |f| %>
                    <% unless user_signed_in? %>
                        <div class="form-group">
                            <label for="InputName" class="col-sm-2">Name</label>
                             <%= f.text_field :full_name, :class=> "form-control" %> 
                        </div>
                 
                        <div class="form-group">
                            <label for="InputEmail1" class="col-sm-2">Email address</label>
                             <%= f.text_field :email, :class=> "form-control" %> 
                            <label for="InputEmail1" class="col-sm-2">Phone Number</label>
                             <%= f.text_field :phone, :class=> "form-control " %> 
                             <%= f.hidden_field :source, :value => "CONTACT_FORM" %>
                             <%= f.hidden_field :recipient, :value => Setting.company_email %>

                        </div>
                    <% else %>


                 
                       <div class="form-group">
                          <label for="InputMessage">Subject</label>
                          <%= f.text_field :subject, :class=> "form-control" %> 
                          <%= f.hidden_field :source, :value => "CONTACT_FORM_USER" %>  
                          <%= f.hidden_field :email, :value => current_user.email %>
                          <%= f.hidden_field :full_name, :value => current_user.full_name %>      
                          <%= f.hidden_field :recipient, :value => Setting.company_email %>
                      </div>
                      
                  <% end %>
                  <div class="form-group">
                          <label for="InputMessage">Mesagge</label>
                          <%= f.text_area :body, :class=> "form-control" %>       
                      </div>
                      <button type="submit" class="btn btn-primary">Submit</button>
              <% end %>
</div>
            </div>

            <div class="col-md-5">
                <div class="contact-info">
                    <h3>Contacts</h3>
                    <address>
                        <strong>Optimus Labs</strong><br>
                        <abbr title="Phone">P:</abbr> (903) 203-8916
                    </address>

                    <!-- Business Hours -->
                    <h3>Business Hours</h3>
                    <ul class="list-unstyled">
                        <li><strong>Monday-Friday:</strong> 9am to 7pm</li>
                        <li><strong>Saturday:</strong> 9am to 7pm</li>
                        <li><strong>Sunday:</strong>9am to 7pm</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>