                (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
                })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
                ga('create', 'UA-51006411-1', 'getoptimus.com');
                ga('require', 'displayfeatures');
                ga('send', 'pageview');
    </script>

</head>
<body>

    <%= render "layouts/nav"%>
    <div class="notifications-bar">
         <% flash.each do |name, msg| %>
              <%= content_tag :div, :class => "alert alert-#{ name == :error ? "danger" : "success" } alert-dismissable" do %>
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <%= msg %>
              <% end %>
         <% end %>
        </div><!-- / .notifications bar -->
    <section class="wrapper">
        
                <%= yield %>
                <div class="container">
                <div class="col-md-4">
                <%= yield :role_sidebar %>
                </div>
                <div class="col-md-8">
                <%= yield :role_main %>
                </div>
                </div>

    </section>
    <aside id="last-widgets">
        <div class="container">
            <div class="col-md-4">
                <section class="footer-widget">
                    <h3>Sitemap</h3>
                    <ul class="footer-sitemap two_cols">
                        <li><%= link_to root_url  do%>
                         <i class="icon-angle-right"></i>Home
                        <% end %>
                        </li>
                        <li><%= link_to page_path('about') do %>
                            <i class="icon-angle-right"></i>About
                        <% end %>
                        </li>
                        <li><%= link_to  services_url do %>
                            <i class="icon-angle-right"></i>Services
                        <% end %>
                        </li>
                        <li><%= link_to  "/blog" do %>
                            <i class="icon-angle-right"></i>Blog
                        <% end %>
                        </li>
                        <li><%= link_to page_path('contact') do %>
                            <i class="icon-angle-right"></i>Contact
                        <% end %>
                        </li>

                    </ul>
                   
                </section>
            </div>
            <div class="col-md-4">
                <section class="footer-widget">
                    <% if current_page?("boop") %>
                    <h3>Newsletter</h3>
                    <p>Get infrequent updates regarding small business technology issues.</p>
                    <%= form_for (@contact) do |f| %>
                    <div class="input-group">
                        <%= f.text_field :email, :class=> "form-control", :placeholder => "Email Address" %>
                        <span class="input-group-btn">
                            <%= f.submit "Suscribe", :class=> "btn btn-info" %>
                           
                        </span>
                    </div><!-- /input-group -->
                    <% end %>
                    <% end %>
                </section>
            </div>
            <div class="col-md-4">
                <section class="footer-widget">
                    <h3 class="logo"><span>Optimus</span> Labs</h3>
                    <address>
                        
                        Phone: 903-203-8916 <br>
                      
                        Email: <a href="mailto:joe@example.com">jody@getoptimus.com</a>
                    </address>
                    <div class="footer-social">
                        <h3>Social media</h3>
                        
                        <a href="https://plus.google.com/+Getoptimus" class="i-google"><i class="icon-google-plus"></i></a>
                        <a href="https://twitter.com/getoptimus" class="i-twitter"><i class="icon-twitter"></i></a>
                        <a href="https://www.facebook.com/getoptimus" class="i-facebook"><i class="icon-facebook"></i></a>
                    
                 
                    </div>
                </section>
            </div>
        </div>
    </aside> <!-- last-widgets -->
    <footer id="footer">
        <div class="container">
            <p>&copy; 2014 <a href="#">Optimus Labs</a> All rights reserved.</p>
        </div>
    </footer>
